generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameResult {
  WIN
  LOSS
  DRAW
}

model Player {
  id              String @id @default(cuid())
  oauthProvider   String
  oauthAccountId  String
  email           String?
  name            String?
  image           String?
  displayName     String?

  score           Int       @default(0)
  winStreak       Int       @default(0)
  wins            Int       @default(0)
  losses          Int       @default(0)
  draws           Int       @default(0)

  games           Game[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([oauthProvider, oauthAccountId], name: "provider_account_unique")
  @@index([email])
}

model Game {
  id              String     @id @default(cuid())
  playerId        String
  result          GameResult
  moves           Json?
  createdAt       DateTime    @default(now())

  player          Player      @relation(fields: [playerId], references: [id], onDelete: Cascade)
  @@index([playerId, createdAt])
}
